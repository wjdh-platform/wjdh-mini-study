/* pages/lifePay/lifePay.wxss */
page{
  /* padding-top: 130rpx; */
}
.changeCell{
  padding: 44rpx 0 40rpx;
  margin-left: 36rpx;
  /* border-bottom: solid 1rpx #F1F1F1; */
  position: relative;
}
.titleC{
  font-size: 24rpx;
  line-height: 24rpx;
  color: #969696;
  margin-bottom: 20rpx;
}
.arrow{
  position: absolute;
  right: 40rpx;
  top: 90rpx;
  /* transform: translateY(-50%); */
  width: 14rpx;
  height: 24rpx;
}
.tabCont{
  height: 90rpx;
  line-height: 90rpx;
  border-bottom: solid #F8F8F8 1rpx;
}
.tabs{
  text-align: center;
  display: inline-block;
  width: 50%;
  color: #424242;
  font-size: 28rpx;
}
.active{
  position: relative;
}
.active::after{
  content: '';
  display: block;
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 70rpx;
  height: 6rpx;
  background: #50DABE;
  border-radius: 3rpx;
}
.payTitle{
  background: #F9F9F9;
  height: 90rpx;
  line-height: 90rpx;
  font-size: 26rpx;
  color: #5A5A5A;
  padding-left: 35rpx;
}
.payTitle::before{
  content: '';
  display: inline-block;
  width: 20rpx;
  height: 20rpx;
  background: #50DABE;
  border-radius: 50%;
  margin-right: 10rpx;
}
.payList .orderList{
  display: flex;
  align-items: center;
  min-height: 120rpx;
  padding: 0 30rpx;
  box-sizing: border-box;
  border-bottom: solid 1rpx #f1f1f1;
}
.orderDetail{
  display: flex;
  justify-content: space-between; 
  width: 93%;
  align-items: center;
  position: relative;
}
.lookMore{
  position: absolute;
  right: 226rpx;
  bottom: 0;
  z-index: 1;
}
.up::after{
  content: '';
  display: inline-block;
  width:0;
  height:0;
	border-right:10rpx solid transparent;
	border-left:10rpx solid transparent;
  border-top:10rpx solid #747474;
  margin-left: 5rpx;
}
.down::after{
  content: '';
  display: inline-block;
  width:0;
  height:0;
	border-right:10rpx solid transparent;
	border-left:10rpx solid transparent;
  border-bottom:10rpx solid #747474;
  margin-left: 5rpx;
}
.orderDClo,.orderDCloO{
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 74rpx;
  border-bottom: solid 1rpx #EFEFEF ;
  font-size: 26rpx;
  color: #A4A4A4;
}
.orderDCloO{
  min-height: 74rpx;
  height: auto;
  line-height: 40rpx;
  padding: 20rpx 0;
  align-items: flex-start;
}
.orderDCloO .detailAdd{
  width: 85%;
}
.detailAdd{
  color: #333;
}
.payName{
  flex:1;
  text-align:left;
  /* margin-left: 30rpx; */
  font-size: 28rpx;
  color: #333;
}
.payName text{
  display: block;
}
.payName .introduction{
  font-size: 24rpx;
  width:325rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.payNum{
  font-size: 28rpx;
  color: #333;
}
.orderDetailO{
  background:#F7F7F7;
  padding: 0 30rpx 0 95rpx;
  box-sizing: border-box;
}
.paid .orderDetailO{
  padding: 0 30rpx ;
}
.payNumTotal{
  width: 750rpx;
  height: 118rpx;
  background: #FFFFFF;
  position: fixed;
  left: 0;
  bottom: 0;
  z-index: 1;
  display: flex;
  align-items: center;
  box-shadow: 0rpx 0rpx 8rpx rgba(116,137,145,.23);
}
.totalNum{
  flex: 1;
  text-align: right;
  color: #BEBEBE;
  font-size:26rpx ;
  margin-right: 20rpx;
}
.totalNum text{
  color: #50DABE;
  font-weight: bold;
}
.payProduct{
  font-size: 26rpx;
  font-weight: 400;
  color: #3C3C3C;
  margin-left: 20rpx;
}
.payProduct image{
  width: 40rpx;
  height: 40rpx;
  display: inline-block;
  vertical-align: middle;
  margin-right: 10rpx;
}
.payProduct text{
  display: inline-block;
  vertical-align: middle;
}
.bindOrderBtn{
  width: 190rpx;
  height: 68rpx;
  background: #50DABE;
  border-radius: 34rpx;
  font-size: 30rpx;
  font-weight: 400;
  color: #FFFFFF;
  text-align: center;
  line-height: 68rpx;
  margin-right: 20rpx;
}
.checkBox{
  width: 70rpx;
  /* height: 70rpx; */
}
.checkBox image{
  width: 40rpx;
  height: 40rpx;
}
.lookMore{
  width: 79rpx;
  height: 34rpx;
  border: 2rpx solid #747474;
  border-radius: 7rpx;
  font-size: 22rpx;
  font-weight: bold;
  color: #747474;
  text-align: center;
  line-height: 34rpx;
}
.ListNone{
  font-size: 28rpx;
  color: #666;
  text-align: center;
  padding: 50rpx 0;
}