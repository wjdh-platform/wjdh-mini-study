  color: #C6C6C6;
}



.inputDis{
  color: #424242;
}
.msgColumn{
  position: relative;
}
.photograph{
  position: absolute;
  right: 40rpx;
  top: 50%;
  transform: translateY(-50%);
  z-index: 3;
  font-size: 22rpx;
  color: #424242;
}
.photograph image{
  width: 39rpx;
  height: 36rpx;
  display: block;
  margin-left: 25rpx;
}
.photoImg{
  width: 144rpx;
  height: 144rpx;
  border-radius: 10rpx;
}
.photoClo{
  position: relative;
}
.imgClose{
  position: absolute;
