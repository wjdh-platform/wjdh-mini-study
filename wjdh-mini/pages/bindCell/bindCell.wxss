  top: -15rpx;
  width: 35rpx;
  height: 35rpx;
  z-index: 3;
}
.addImg{
  width: 144rpx;
  height: 144rpx;
  display: inline-block;
  border-radius: 10rpx;
  /* margin-left: 20rpx; */
  background: #F8F8F8 url("data:image/png;base64,") no-repeat center center;
  background-size: 46rpx 46rpx;
}
.verificationPhoto,.jobsPopup,.verificationPhotoJ{
  position: fixed;
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;
  z-index: 9;
  background: rgba(106,102,104,.6)
}
.verificationPhotoJ{
  top: 130rpx;
}
.jobsPopup{
  top: 200rpx;
  background:#fff;
}
.jobsPopup .msgColumn{
  border-bottom: solid 1rpx #ececec;
}
.jobsList{
  padding: 30rpx 40rpx;
}
.jobsList .jobsClo{
  display: inline-block;
  padding: 8rpx 15rpx;
  border: solid 1rpx #aaa;
  border-radius: 12rpx;
  font-size: 28rpx;
  color: #444;
  margin: 0 10rpx 20rpx;
}
.phoneCode{
  width: 522rpx;
  /* height: 461rpx; */
  padding: 40rpx 30rpx 60rpx;
  background: #fff;
  border-radius: 15rpx;
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%,-50%);
  box-sizing: border-box;
}

.popupTitle{
  text-align: center;
  color: #333333;
  font-size: 30rpx;
}
.phototextP{
  font-size: 28rpx;
  color: #282828;
  display: inline-block;
  vertical-align: middle;
}
.phototextPP{
  color: #B1B1B1;
}
.photoIcon{
  width: 22rpx;
  height: 30rpx;
  display: inline-block;
  vertical-align: middle;
  margin-right: 22rpx;
}
.nameIcon{
  width: 24rpx;
  height: 24rpx;
  display: inline-block;
  vertical-align: middle;
  margin-right: 22rpx;
}
.codeIcon{
  width: 24rpx;
  height: 26rpx;
}
.photoText{
  border-bottom:  solid 1rpx #E9E9E9;
  padding: 60rpx 0 10rpx;
  position: relative;
}
.codeBtn,.codeBtnYZ,.codeBtnYZB{
  position: absolute;
  right: 0;
  top: 60rpx;
  z-index: 4;
  font-size: 28rpx;
  color: #50DABE;
}
.codeBtnYZ{
  top: 50%;
  transform: translateY(-50%);
  right: 40rpx;
}
.codeBtnYZB{
  right: 40rpx;
  top: 50%;
  transform: translateY(-50%);
  padding: 5rpx 8rpx;
  border: solid 1rpx #50DABE;
  font-size: 26rpx;
  border-radius: 10rpx;
}
.verificationBtn{
  width: 338rpx;
  height: 56rpx;
  background: #50DABE;
  border-radius: 28rpx;
  margin: 45rpx auto 0;
