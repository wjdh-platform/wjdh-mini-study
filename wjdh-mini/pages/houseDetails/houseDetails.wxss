/* pages/houseDetails/houseDetails.wxss */
page {
  background: #F8F8F8;
  padding: 0 0 50rpx;
}

.column {
  margin-top: 30rpx;
  background: #fff;
}

.title {
  font-size: 32rpx;
  color: #424242;
  line-height: 32rpx;
  padding: 40rpx 0 20rpx 30rpx;
  position: relative;
}

.status {
  color: #50DABE;
}

.yellow {
  color: #EAC100;
}

.red {
  color: red;
}

.jiebang {}

.addMember {
  position: absolute;
  right: 40rpx;
  top: 50%;
  transform: translateY(-50%);
  height: 44rpx;
  line-height: 44rpx;
  font-size: 24rpx;
  color: #fff;
  background: #50DABE;
  padding: 0 20rpx;
  border-radius: 22rpx;
}

.item,
.columnMe {
  border-bottom: solid 1rpx #E8E8E8;
  padding: 0 0 0 30rpx;
  box-sizing: border-box;
  min-height: 90rpx;
  font-size: 26rpx;
  color: #424242;
}

.item {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.itemText {
  width: 77%;
  text-align: left;
}

.column .item:last-child {
  border: none;
}

.itemTitle {
  color: #8F9199;
  width: 160rpx;
}

.itemTitle,
.itemText {
  display: inline-block;
}

.tabCont {
  height: 90rpx;
  line-height: 90rpx;
  border-bottom: solid #E8E8E8 1rpx;
}

.tabs {
  text-align: center;
  display: inline-block;
  width: 25%;
  color: #424242;
  font-size: 28rpx;
}

.active {
  position: relative;
}

.active::after {
  content: '';
  display: block;
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 70rpx;
  height: 6rpx;
  background: #50DABE;
  border-radius: 3rpx;
}

.columnMe {
  display: flex;
  justify-content: space-between;
}

.noData {
  padding: 100rpx 0;
  text-align: center;
  font-size: 28rpx;
  color: #333;
}

.shenheStatus {
  margin-top: 40rpx;
  margin: 40rpx 30rpx 50rpx 0;
  overflow: hidden;
}

.delBtn {
  width: 220rpx;
  height: 68rpx;
  background: #50DABE;
  border-radius: 34rpx;
  font-size: 30rpx;
  font-weight: 400;
  color: #FFFFFF;
  text-align: center;
  line-height: 68rpx;
  float: right;
}

.delText {
  font-size: 26rpx;
  color: #D5D5D5;
  float: right;
  line-height: 68rpx;
  margin-right: 20rpx;
}

.columnMe {
  display: flex;
  align-content: center;
  flex-direction: row;
  justify-content: space-between;
  padding-right: 30rpx;
  position: relative;
}

.name {
  width: 200rpx;
  margin-top: 25rpx;
}

.action {
  margin-top: 25rpx;
}

.shareBtn {
  font-size: 26rpx;
  color: #EAC100;
  padding: 10rpx 15rpx !important;
  background: transparent;
  font-weight: normal;
  width: auto !important;
  line-height: 26rpx !important;
  position: absolute;
  right: 30rpx;
  top: 50%;
  transform: translateY(-50%);
  border: solid 1rpx #EAC100;
}

.green {
  color: #50DABE;
  border: solid 1rpx #50DABE;
}

.default {
  color: #424242;
}

.yellow {
  color: #EAC100;
  border: solid 1rpx #EAC100;
}

.red {
  color: red;
  border: solid 1rpx red;
}

.yellow01 {
  color: #EAC100;
}

.red01 {
  color: red;
}

.shareBtnO {
  background: transparent;
  border: none;
  padding: 0;
  position: absolute;
  left: 0;
  top: 0;
  bottom: 0;
  right: 0;
}

.btnType {
  position: relative;
  /* width: 125rpx; */
  /* height: 45rpx; */
  text-align: center;
  line-height: 45rpx;
  border-radius: 10rpx;
  margin-right: 20rpx;
  padding: 0 10rpx;
}
.btnType:last-child{
  margin-right: 0;
}
.operation {
  display: flex;
  align-items: center;
}

.jiebang {
  color: #50DABE;
}
