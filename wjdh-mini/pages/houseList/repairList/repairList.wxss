/* pages/houseList/repairList/repairList.wxss */
page{
  /* padding-top: 110rpx; */
  background: #F7F9FA;
}
.tabCont{
  height: 90rpx;
  line-height: 90rpx;
  background: #fff;
  /* border-bottom: solid #E8E8E8 1rpx; */
}
.tabs{
  text-align: center;
  display: inline-block;
  width: 50%;
  color: #BCBCBC;
  font-size: 28rpx;
}
.active{
  position: relative;
  color: #333;
}
.active::after{
  content: '';
  display: block;
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 40rpx;
  height: 6rpx;
  background: #50DABE;
  border-radius: 3rpx;
}
.column{
  /* margin-top: 30rpx; */
  width: 690rpx;
  background: #FFFFFF;
  box-shadow: 0px 6rpx 28rpx 4rpx rgba(125, 125, 125, 0.05);
  border-radius: 15rpx;
  margin: 30rpx auto 0;
  padding: 20rpx;
  box-sizing: border-box;
}

.noData{
  font-size: 28rpx;
  color: #666;
  text-align: center;
  padding: 100rpx 0;
}
.title{
  font-size: 30rpx;
  font-weight: bold;
  color: #333333;
}
.description{
  font-size: 26rpx;
  /* font-weight: bold; */
  color: #A1A1A1;
  line-height: 39rpx;
  margin: 15rpx 0 10rpx;
}
.time{
  font-size: 24rpx;
  color: #ABABAB;
}
.reply {
  border-top: 2rpx solid #F2F2F2;
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-top: 15rpx;
  padding-top: 16rpx;
}

.replyTitle {
  font-size: 26rpx;
  color: #50DABE;
}
.replyCont {
  width: 500rpx;
  font-size: 26rpx;
  color: #A1A1A1;
}