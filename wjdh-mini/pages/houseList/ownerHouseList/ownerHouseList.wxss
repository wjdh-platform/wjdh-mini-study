/* pages/houseList/ownerHouseList/ownerHouseList.wxss */
page{
  background: #F8F8FB;
  /* padding-top: 110rpx; */
  padding-bottom: 50rpx;
}
.listColumn{
  width: 100%;
  height: 186rpx;
  background: #FFFFFF;
  /* box-shadow: 0px 0px 12rpx 1rpx rgba(8, 8, 8, 0.07); */
  /* border-radius: 17rpx; */
  margin: 0 auto;
  display: flex;
  align-items: center;
  /* flex-direction: row; */
  /* justify-content: space-between; */
  padding: 0 30rpx;
  box-sizing: border-box;
  margin-top: 30rpx;
  position: relative;
  transition: all .4s;
}
.houseListIcon{
  width: 70rpx;
  height: 70rpx;
  margin-right: 30rpx;
}
.houseCont{
  flex: 1;
}
.changeIntro,.Unbundling{
  display: inline-block;
  width: 107rpx;
  height: 40rpx;
  background: #3ECBFF;
  opacity: 0.8;
  border-radius: 20rpx;
  text-align: center;
  font-size: 23rpx;
  color: #fff;
  line-height: 40rpx;
}
.Unbundling{
  background: #FF3E3E;
  margin-left: 40rpx;
}
.houseName{
  color: #333;
  font-size: 32rpx;
  line-height: 32rpx;
  /* margin-bottom: 30rpx; */
}
.houseType{
  color: #50DABE;
  font-size: 30rpx;
}

.fail{
  color: red;
}
.shenheing{
  color:#EAC100;
}
.listNone{
  text-align: center;
  font-size: 28rpx;
  color: #666; 
  margin-top: 100rpx;
}
.introduction text{
  color: red;
}
.introduction{
  color: #666;
  font-size: 26rpx;
  margin-top: 30rpx;
}
.delList{
    width: 160rpx;
    height: 100%;
    background-color: #EF0000;
    color: #fff;
    position: absolute;
    right: -160rpx;
    top: 0;
    display: flex;
    align-items: center;
    justify-content: center;
}
.list .active {
  transform: translate(-160rpx)
}
.green{
  color: #f18a69;
}

.tabCont {
  height: 90rpx;
  line-height: 90rpx;
  background: #fff;
}

.tabs {
  text-align: center;
  display: inline-block;
  width: 50%;
  color: #BCBCBC;
  font-size: 28rpx;
}

.tabCont .active {
  position: relative;
  color: #333;
}

.tabCont .active::after {
  content: '';
  display: block;
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 40rpx;
  height: 6rpx;
  background: #50DABE;
  border-radius: 3rpx;
}
.list{
  overflow: hidden;
}
